<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:fontFamily="@font/imprima"
            android:textColor="#000000"
            android:textSize="20sp"

            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBBBB"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/edit_profile_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_account_img"
                android:adjustViewBounds="true"
                android:maxWidth="25dp"
                android:maxHeight="25dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_tv"
                android:text="Edit Profile"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/change_password_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/change_password_img"
                android:adjustViewBounds="true"
                android:maxWidth="25dp"
                android:maxHeight="25dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_password_tv"
                android:text="Change Password"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/imprima"

                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBBBB"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/setting_notification">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notification"
                    android:adjustViewBounds="true"
                    android:maxWidth="25dp"
                    android:maxHeight="25dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_noification"
                    android:text="Notifications"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent" />

               <com.suke.widget.SwitchButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/notification_toggle"
                   android:layout_marginLeft="120dp"
                   android:layout_gravity="bottom"
                   />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/setting_fingerprint">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fingerprint"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical"
                    android:maxWidth="25dp"
                    android:maxHeight="25dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_fingerprint"
                    android:text="Fingerprint"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.suke.widget.SwitchButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fingerprint_toggle"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="133dp"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support"
                android:fontFamily="@font/imprima"
                android:textColor="#000000"
                android:textSize="20sp"

                android:layout_marginLeft="8dp"
                android:layout_marginBottom="5dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBBBB"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/setting_feedback">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_feedback"
                    android:adjustViewBounds="true"
                    android:maxWidth="25dp"
                    android:maxHeight="25dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_Feedback"
                    android:text="Feedback"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/setting_faq">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_faq"
                    android:adjustViewBounds="true"
                    android:maxWidth="25dp"
                    android:maxHeight="25dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_faq"
                    android:text="FAQ"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/setting_terms_and_condition">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_terms_and_conditions"
                    android:adjustViewBounds="true"
                    android:maxWidth="25dp"
                    android:maxHeight="25dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_terms_and_conditions"
                    android:text="Terms and Conditions"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/setting_about_developers">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_developer"
                    android:adjustViewBounds="true"
                    android:maxWidth="25dp"
                    android:maxHeight="25dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_about_developers"
                    android:text="About Developers"

                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/setting_about_our_app">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_about"
                    android:adjustViewBounds="true"
                    android:maxWidth="25dp"
                    android:maxHeight="25dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_about_our_App"
                    android:text="About our App"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="Logout"
        android:background="#ABE7B2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>