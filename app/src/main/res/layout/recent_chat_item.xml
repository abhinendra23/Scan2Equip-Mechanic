<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/bg_item_list">
    <CheckBox
        android:id="@+id/chk_list"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_toRightOf="@id/chk_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mechanic_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profilepicdemo"/>
        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/unread_mesg_no"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-2dp"
            android:gravity="center"
            android:text="3"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"

            android:background="@drawable/bg_unread"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/chat_ll"
        android:paddingRight="10dp"
        android:layout_toRightOf="@+id/rl_photo"
        android:background="@drawable/bg_bottom_grey"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/manager_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanic name"
                android:textSize="16sp"
                android:fontFamily="@font/imprima"/>
            <View
                android:id="@+id/online_indicator"
                android:layout_toRightOf="@+id/manager_name"
                android:layout_alignTop="@id/manager_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_online"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/complain_id_ll"
                android:layout_below="@id/manager_name"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaint Id:"
                    android:fontFamily="@font/imprima"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/complain_id"
                    android:text="14"
                    android:fontFamily="@font/imprima"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/last_message"
                android:layout_below="@id/complain_id_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Hi, Joe, looks great! :)"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/imprima"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:04pm"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_alignTop="@id/online_indicator"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/imprima"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>